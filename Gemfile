# Gemfile for COSMOS v4 Deployment with Ruby 2.5.*

source 'https://rubygems.org'

# Define Ruby Version
ruby '~> 2.5.0'

# COSMOS Framework
gem 'cosmos', '4.5.2'

# Logging and Utilities
gem 'logger'
gem 'json'

# Testing Framework
gem 'rspec', '~> 3.12'
gem 'rspec-core', '~> 3.12'
gem 'rspec-expectations', '~> 3.12'
gem 'rspec-mocks', '~> 3.12'

# GUI Dependencies
gem 'qtbindings', '~> 4.8.6.5'

# Code Quality
gem 'rubocop', '~> 1.12.1'

# Additional Utilities
gem 'fileutils'

# Bundler Version
gem 'bundler', '1.17.3'

# Documentation
group :development do
  gem 'yard'
end

# Testing Tools
group :test do
  gem 'simplecov', '~> 0.21.2'
end